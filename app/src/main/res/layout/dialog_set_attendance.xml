<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Attendance Day"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edtAttendanceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Attendance Title (e.g., Midterm Exam)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time (HH:MM, 24-hour)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtLateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Late After (HH:MM, 24-hour)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time (HH:MM, 24-hour)"/>

</LinearLayout>
