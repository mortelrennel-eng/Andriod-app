<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5" 
    tools:context=".CreateAnnouncementActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Create Announcement"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edtAnnouncementTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Announcement Title"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtAnnouncementContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:hint="Announcement Content"
            android:gravity="top"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnPostAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Post Announcement"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
