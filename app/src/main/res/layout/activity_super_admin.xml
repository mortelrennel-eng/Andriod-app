<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Super Admin Dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnRegisterSuperAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register New Super Admin"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRegisterAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register New Admin"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnViewAllUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Users"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnUploadEbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload E-Book"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnManageEbooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage E-Books"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnManageStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Students"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnManageAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Attendance Records"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSetAttendanceDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Attendance Day"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout" />

    </LinearLayout>
</ScrollView>
