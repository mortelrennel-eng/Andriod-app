<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivQrStudent"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tvStudentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Student Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/tvStudentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 000-00"
                    android:textColor="@color/text_secondary"/>

                 <TextView
                    android:id="@+id/tvStudentContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact: 09..."
                    android:textColor="@color/text_secondary"/>

                <Button
                    android:id="@+id/btnDownloadQr"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/primary"
                    android:text="Download QR" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2">

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:text="Edit Profile" />

            <Button
                android:id="@+id/btnViewAnnouncements"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:text="Announcements" />

            <Button
                android:id="@+id/btnViewAttendance"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:text="Attendance" />

            <Button
                android:id="@+id/btnOpenEbooks"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:text="E-Books" />
                
             <Button
                android:id="@+id/btnSavedEbooks"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/white"
                android:text="Saved E-books" />

        </GridLayout>

        <Button
            android:id="@+id/btnStudentSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sign Out"
            android:backgroundTint="@color/accent"/>

    </LinearLayout>
</ScrollView>
